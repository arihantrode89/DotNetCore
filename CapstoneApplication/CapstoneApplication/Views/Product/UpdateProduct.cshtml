@model ServiceContracts.DTO.ProductUpdateRequest

@{
    ViewData["Title"] = "UpdateProduct";
}

<h1>UpdateProduct</h1>

<h4>ProductUpdateRequest</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateProduct" asp-controller="Product" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="ProductId" type="hidden" />
            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductDescription" class="control-label"></label>
                <input asp-for="ProductDescription" class="form-control" />
                <span asp-validation-for="ProductDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CurrentPrice" class="control-label"></label>
                <input asp-for="CurrentPrice" class="form-control" />
                <span asp-validation-for="CurrentPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label"></label>
                @* <input asp-for="CategoryId" class="form-control" /> *@
                @* <select asp-for="CategoryId">
                    @foreach(CategoryResponse item in ViewBag.Categories)
                    {
                        <option value="@item.CategoryId">@item.CategoryName</option>
                    }
                </select> *@

                <select asp-for="CategoryId" asp-items="@ViewBag.Categories">

                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

